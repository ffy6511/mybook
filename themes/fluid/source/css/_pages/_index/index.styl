


.index-card
  padding: 0px
  margin-bottom 2rem
  transition: all 0.2s ease-in-out
  border:  1px solid var(--card-border-color)
  border-radius: 15px
  display flex
  flex-direction row
  align-items stretch

.index-card:nth-child(2n+1)
  flex-direction row-reverse

.index-card:hover {
  transform: translateY(-1px);
  box-shadow: 0 8px 16px var(--card-border-color), 
              0 4px 8px var(--card-border-color);
}

.index-img
  flex 0 0 45%
  padding 3px
  margin 0px

.index-info
  flex 1
  padding 1.5rem

:root {
  --card-border-color: rgba(112, 111, 111, 0.1);
  --card-border-hover-color: rgba(0, 0, 0, 0.2);
}

[data-scheme="dark"] {
  --card-border-color: rgba(164, 162, 162, 0.1);
  --card-border-hover-color: rgba(255, 255, 255, 0.2);
}

.index-img

  
  img
    display block
    width 100%
    height 12rem
    object-fit cover
    box-shadow 0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15)
    border-radius 0.30rem
    background-color transparent
    transition: all 0.2s ease-in-out

.index-img:hover
  img
    transform scale(1.02)

.index-info
  display flex
  flex-direction column
  justify-content space-between
  padding-top .5rem
  padding-bottom .5rem

.index-header
  color var(--text-color)
  font-size 1.5rem
  font-weight bold
  line-height 1.4
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  margin-bottom .25rem

  .index-pin
    color var(--text-color)
    font-size 1.5rem
    margin-right .15rem

.index-btm
  color var(--sec-text-color)

  a
    color var(--sec-text-color)

.index-excerpt
  color var(--sec-text-color)
  margin 0.5rem 0
  height calc(1.4rem * 3)
  overflow hidden
  display flex

  & > div
    width 100%
    line-height 1.4rem
    word-break break-word
    display -webkit-box
    -webkit-box-orient vertical
    -webkit-line-clamp 3

.index-excerpt__noimg
  height auto
  max-height calc(1.4rem * 3)

@media (max-width: 767px)
  .index-info
    padding-top 1.25rem

  .index-header
    font-size 1.25rem
    white-space normal
    overflow hidden
    word-break break-word
    display -webkit-box
    -webkit-box-orient vertical
    -webkit-line-clamp 2

    .index-pin
      font-size 1.25rem

  .index-excerpt
    height auto
    max-height calc(1.4rem * 3)
    margin 0.25rem 0
